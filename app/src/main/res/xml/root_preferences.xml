<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/server_section_header">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="http"
            app:title="Use http connection" />
        <EditTextPreference
            app:defaultValue="192.168.0.102"
            app:key="server_path"
            app:title="Server path"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue="8080"
            app:dependency="http"
            app:key="server_port"
            app:title="Server port"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

